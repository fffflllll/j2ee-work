<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my_project.mapper.UserMapper">
    <resultMap id="UserResultMap" type="my_project.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="role" column="role"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="findByUsername" parameterType="string" resultMap="UserResultMap">
        SELECT id, username, password, role, create_time FROM user WHERE username = #{username}
    </select>

    <select id="findById" parameterType="long" resultMap="UserResultMap">
        SELECT id, username, password, role, create_time FROM user WHERE id = #{id}
    </select>

    <select id="countAdmins" resultType="int">
        SELECT COUNT(*) FROM user WHERE role = 'admin'
    </select>

    <insert id="insert" parameterType="my_project.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username, password, role, create_time)
        VALUES (#{username}, #{password}, #{role}, NOW())
    </insert>
</mapper>
