<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my_project.mapper.EvaluationMapper">

    <resultMap id="EvaluationResultMap" type="my_project.entity.Evaluation">
        <id property="id" column="id"/>
        <result property="dishId" column="dish_id"/>
        <result property="userId" column="user_id"/>
        <result property="score" column="score"/>
        <result property="comment" column="comment"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="findByDishId" parameterType="long" resultMap="EvaluationResultMap">
        SELECT * FROM evaluation WHERE dish_id = #{dishId} ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="my_project.entity.Evaluation">
        INSERT INTO evaluation (dish_id, user_id, score, comment)
        VALUES (#{dishId}, #{userId}, #{score}, #{comment})
    </insert>

    <select id="findAll" resultMap="EvaluationResultMap">
        SELECT * FROM evaluation
    </select>

    <delete id="deleteById" parameterType="long">
        DELETE FROM evaluation WHERE id = #{id}
    </delete>
</mapper>